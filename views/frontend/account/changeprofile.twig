{% extends 'frontend/base/default.twig' %}

{% block body %}

    <div class="col-lg-12 well">
        <div class="row">
            <form method="post">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-5 form-group">
                            <label>Voornaam</label>
                            <input type="hidden" name="firstname" placeholder="Voornaam" value="{{ data.id }}" class="form-control">
                            <input required type="text" name="firstname" placeholder="Voornaam" value="{{ input.old('firstname', data.firstname) }}" class="form-control">
                        </div>

                        <div class="col-sm-2 form-group">
                            <label>Tussenvoegsel(s)</label>
                            <input type="text" name="middlename" placeholder="Tussenvoegsels" value="{{ input.old('middlename', data.middlename) }}" class="form-control">
                        </div>

                        <div class="col-sm-5 form-group">
                            <label>Achternaam</label>
                            <input required type="text" name="lastname" placeholder="Achternaam" value="{{ input.old('lastname', data.lastname) }}" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Straatnaam</label>
                            <input required type="text" name="streetname" placeholder="Straatnaam" value="{{ data.streetname }}" class="form-control">
                        </div>

                        <div class="col-sm-6 form-group">
                            <label>Huisnummer</label>
                            <input required type="number" name="housenumber" placeholder="Huisnummer" value="{{ data.housenumber }}" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4 form-group">
                            <label>Stad</label>
                            <input required type="text" name="placeofresidence" placeholder="Plaats" value="{{ data.placeofresidence }}" class="form-control">
                        </div>

                        <div class="col-sm-4 form-group">
                            <label>Postcode</label>
                            <input required type="text" name="zipcode" placeholder="Postcode" value="{{ data.zipcode }}"  class="form-control">
                        </div>

                        <div class="col-sm-4 form-group">
                            <label>Mobiel</label>
                            <input required type="number" name="mobile" placeholder="Mobiel" value="{{ data.mobile }}"  class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Email Adres</label>
                            <input required type="email" name="email" placeholder="Email Address" value="{{ data.email }}"  class="form-control">
                        </div>
                    </div>
                    <input required type="hidden" name="role_idrole" value="{{ data.role_id }}">
                    <input required type="hidden" name="id" value="{{ data.id }}">

                    <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                    <a href="/account" class="btn btn-primary">Back to profiel</a>
                </div>
            </form>

        </div>
    </div>
    </div>


{% endblock %}

