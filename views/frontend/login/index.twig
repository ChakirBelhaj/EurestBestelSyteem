{% extends 'frontend/base/default.twig' %}

{% block title %}
    Login
{% endblock %}

{% block css %}
    .wrapper {
        margin-top: 10px;
    }
    .form-signin {
        max-width: 380px;
        padding: 15px 35px 45px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);  
    }
    @media screen and (min-width: 1600px) {
        .wrapper {
            margin-top: 80px;
        }
    }
{% endblock %}

{% block body %}
    <div class="login-form col-md-6 col-md-offset-3">
        <div class="wrapper">
            <form class="form-signin" method="post" action="/login">
                <h3>Login</h3>
        		<input class="form-control" type="email" name="email" placeholder="Email" tabindex="1">
    	    	<input class="form-control" type="password" name="password" placeholder="Wachtwoord" tabindex="2">
                <br>
    	    	<input class="btn btn-primary" type="submit" name="submit" value="Login" tabindex="3">
                <br><br>
                Wachtwoord vergeten? <a href="/password">Reset</a>
        	</form>
        </div>
    </div>
{% endblock %}