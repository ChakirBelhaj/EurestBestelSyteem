{% extends 'frontend/base/default.twig' %}

{% block body %}

    <div class="col-lg-12 well">
        <div class="row">
            <form method="post">
                <div class="col-sm-12">

                    <div class="row">
                        <form>
                            <div class="col-sm-5 form-group">
                                <label for="">Old Password:</label>
                                <input required type="password" name="oldPassword" class="form-control" placeholder="Enter Old Password Here..">
                            </div>
                    </div>

                    <div class="row">
                            <div class="col-sm-5 form-group">
                                <label for="pass1">Password:</label>
                                <input required type="password" name="nieuwPassword" id="password" class="form-control" placeholder="Enter Password Here..">
                            </div>
                    </div>

                    <div class="row">
                            <div class="col-sm-5 form-group">
                                <label for="pass2">Confirm Password:</label>
                                <input required type="password" name="confirmNieuwPassword" id="pass2" class="form-control" placeholder="Confirm Password Here.." onkeyup="checkPass(); return false;">
                                <span id="confirmMessage" class="confirmMessage"></span>
                            </div>
            </form>
        </div>
                    <input required type="hidden" name="id" value="{{ data.id }}">
                    <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                    <a href="/account" class="btn btn-primary">Back to profiel</a>
                </div>
            </form>
        </div>
    </div>
    </div>


{% endblock %}

